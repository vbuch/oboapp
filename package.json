{
  "name": "oboapp",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "build:shared": "pnpm --filter @oboapp/shared build",
    "build:all": "pnpm run build:shared && pnpm --filter oboapp-ingest build && pnpm --filter oboapp-web build",
    "test:all": "pnpm --filter '*' run test:run --if-present",
    "lint:all": "pnpm --filter '*' run lint --if-present",
    "postinstall": "pnpm run build:shared"
  },
  "devDependencies": {
    "@types/node": "^20",
    "eslint": "^9.18.0",
    "typescript": "^5",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.15"
  },
  "optionalDependencies": {
    "lightningcss-darwin-arm64": "^1.31.1"
  }
}
