{
  "name": "oboapp",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "build:shared": "pnpm --filter @oboapp/shared build",
    "build:db": "pnpm --filter @oboapp/db build",
    "build:all": "pnpm build:shared && pnpm build:db && pnpm --filter oboapp-ingest build && pnpm --filter oboapp-web build",
    "test:all": "pnpm --filter '*' test:run --if-present",
    "lint:all": "pnpm --filter '*' lint --if-present",
    "postinstall": "pnpm build:shared && pnpm build:db",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.15"
  },
  "optionalDependencies": {
    "lightningcss-darwin-arm64": "^1.31.1"
  }
}
