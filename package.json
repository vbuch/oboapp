{
  "name": "oboapp",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "build:shared": "pnpm --filter @oboapp/shared build",
    "build:all": "pnpm build:shared && pnpm --filter oboapp-ingest build && pnpm --filter oboapp-web build",
    "test:all": "pnpm --filter '*' test:run --if-present",
    "lint:all": "pnpm --filter oboapp-web lint && pnpm --filter oboapp-ingest lint",
    "postinstall": "pnpm build:shared",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.47.0",
    "typescript": "^5",
    "vitest": "^4.0.15"
  },
  "optionalDependencies": {
    "lightningcss-darwin-arm64": "^1.31.1"
  }
}
