{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "warn"
  },
  "plugins": ["typescript"],
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "none",
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ],
    "no-var": "error",
    "prefer-const": "error",
    "no-else-return": ["error", { "allowElseIf": false }],
    "typescript/no-explicit-any": "error"
  },
  "overrides": [
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/__tests__/**",
        "**/__mocks__/**",
        "**/scripts/**"
      ],
      "rules": {
        "typescript/no-explicit-any": "off"
      }
    }
  ],
  "ignorePatterns": [
    ".next/**",
    "out/**",
    "build/**",
    "dist/**",
    "node_modules/**",
    "coverage/**",
    "**/*.d.ts",
    "**/*.mjs",
    "emulator-data/**",
    "terraform/**/.terraform/**",
    "public/firebase-messaging-sw.js",
    "public/mockServiceWorker.js"
  ]
}
