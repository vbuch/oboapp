# ==============================================================================
# LOCAL DEVELOPMENT: Firebase Emulators
# ==============================================================================
# This configuration enables zero-dependency local development
# See docs/setup/quick-start-emulators.md for setup instructions

# Backend (API routes) emulator mode - required for server-side code
USE_FIREBASE_EMULATORS=true

# Frontend emulator mode - required for client-side code
NEXT_PUBLIC_USE_FIREBASE_EMULATORS=true

# Emulator connection (automatically set by docker-compose, can be overridden)
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099

# Demo project ID for emulator mode
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-project

# Use default database for emulators (no named databases)
NEXT_PUBLIC_FIREBASE_DATABASE_ID=(default)

# Base URL for local development
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Google Maps API Key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Message Relevance Period (in days)
MESSAGE_RELEVANCE_DAYS=7
