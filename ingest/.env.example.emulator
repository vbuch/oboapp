# ==============================================================================
# LOCAL DEVELOPMENT: Firebase Emulators + Mock APIs
# ==============================================================================
# This configuration enables zero-dependency local development
# See docs/setup/quick-start-emulators.md for setup instructions

# Use Firebase Emulators instead of production Firebase
USE_FIREBASE_EMULATORS=true

# Emulator connection (automatically set by docker-compose, can be overridden)
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099

# Demo project ID for emulator mode
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-project

# Use default database for emulators (no named databases)
FIREBASE_DATABASE_ID=(default)

# Mock external API calls with fixture data
MOCK_GEMINI_API=true
MOCK_GOOGLE_GEOCODING=true
MOCK_OVERPASS_API=true
MOCK_CADASTRE_API=true

# App URL for notification links
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google Gemini AI Model (used by mock service for pattern matching)
GOOGLE_AI_MODEL=gemini-2.5-flash-lite

# ==============================================================================
# OPTIONAL: Custom Test Fixtures
# ==============================================================================
# Override default fixtures with custom scenarios for testing

# GEMINI_FIXTURE_PATH=__mocks__/fixtures/gemini/custom-scenario.json
# GEOCODING_FIXTURE_PATH=__mocks__/fixtures/google-geocoding/custom.json
# OVERPASS_FIXTURE_PATH=__mocks__/fixtures/overpass/custom.json
# CADASTRE_FIXTURE_PATH=__mocks__/fixtures/cadastre/custom.json
